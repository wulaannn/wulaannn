<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crud Node JS - MySQL</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #ffe6f0; /* Style background */
            color: #333;
            margin: 0;
            padding: 0;
        }

        h1, h2 {
            color: #ff3399; /* Style headings */
            text-align: center;
        }

        /* Styles Table */
        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: #fff; /* White table background */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ff99cc; /* Light pink borders */
        }

        th {
            background-color: #ff66b3; /* Darker pink header */
            color: white;
        }

        tr:nth-child(even) {
            background-color: #ffe6f0;
        }

        a {
            color: #ff3399; /* Pink links */
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        /* Styles Form */
        form {
            width: 50%;
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin-bottom: 5px;
            color: #ff3399;
        }

        input[type="text"], input[type="email"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ff99cc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        button {
            background-color: #ff66b3;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #ff3399; /* Darker pink on hover */
        }
    </style>
</head>
<body>
    <h1>Daftar User/Pengguna</h1>
    <Table border="1">
        <tr>
            <th>ID</th>
            <th>Nama</th>
            <th>Email</th>
            <th>Telepon</th>
            <th>Aksi</th>
        </tr>
        <% users.forEach(pengguna => {%>
        <tr>
            <td><%= pengguna.id %></td>
            <td><%= pengguna.nama %></td>
            <td><%= pengguna.email %></td>
            <td><%= pengguna.phone %></td>
            <td>
                <a href="/edit/<%= pengguna.id %>">Edit</a> |
                <a href="/delete/<%= pengguna.id %>">Hapus</a>
            </td>
        </tr>
        <% }) %>
    </Table>

    <h2>Tambah Pengguna Bru</h2>
    <form action="/add" method="post">
        <label for="nama">Nama:</label>
        <input type="text" id="nama" name="nama" required><br>
        <label for="email">Email:</label>
        <input type="email" name="email" id="email"><br>
        <label for="phone">Telepon:</label>
        <input type="text" name="phone" id="phone"><br>
        <button type="submit">Tambah</button>
    </form>
</body>
</html>